<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/item_user_card_elevation"
    android:layout_margin="@dimen/item_user_card_margin"

    tools:ignore="UnusedAttribute">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/img_user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/user_avatar_image_description"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/username_text_size"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/username_margin_start"

            app:layout_constraintTop_toTopOf="@id/img_user_avatar"
            app:layout_constraintStart_toEndOf="@id/img_user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/img_user_avatar"
            app:layout_constraintEnd_toStartOf="@id/tv_repos_count"

            tools:text="MisterWeeMan"/>

        <TextView
            android:id="@+id/tv_repos_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"

            app:layout_constraintTop_toTopOf="@id/img_user_avatar"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintBottom_toBottomOf="@id/img_user_avatar"
            app:layout_constraintEnd_toEndOf="parent"

            tools:text="Repo: 12"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>